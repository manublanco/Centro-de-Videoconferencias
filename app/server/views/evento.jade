// preset form values if we receive a userdata object //
user = typeof(udata) != 'undefined' ? udata : { }
// store the userId on the client side in a hidden input field //
input(type='hidden', value= user._id)#userId

#evento-form-container
	form( method="post")#evento-form.form-horizontal.well.span6
		h1 Crear Evento
		p#sub1.subheading Formulario para la creación de un evento
		hr
		fieldset
			#titulo-cg.control-group
				label.control-label(for='titulo-tf') Titulo
				.controls
					input#titulo-tf.input-xlarge(type='text', name='titulo')
			#descripcion-cg.control-group
				label.control-label(for='descripcion-tf') Descripción
				.controls
					textarea#descripcion-tf.input-xlarge(type='text', name='Descripcion')
			#fecha-cg.control-group
				label.control-label(for='fecha-tf') Fecha 
				.controls
					input#fecha-tf.input(type='date', name='fecha')		
				label.control-label(for='hora-tf') Hora 
				.controls	
					input#hora-tf.input(type='time', name='hora')
			#invitado-cg.control-group
				label.control-label(for='invitado-tf')	Invitados 
				.controls
					input#invitado-tf.input(type='email', name='invitado1')
					input#invitado-tf.input(type='email', name='invitado2')
					input#invitado-tf.input(type='email', name='invitado3')
					input#invitado-tf.input(type='email', name='invitado4')
			hr
			p#sub2.subheading
			.form-actions
				button(type='button')#evento-form-btn1.btn 
				button(type='submit')#evento-form-btn2.btn 


// display form errors in a custom modal window //

include modals/form-errors

