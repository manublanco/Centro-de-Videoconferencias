//salas publicas
.fill {
    height: 100%
}

#chat {
    position: relative;
    height: 550px;
}

#video_grid {
    height: 550px;
    border: 1px solid #012C79;
    margin-left: 40px;
    margin-top: 20px;
    background-color: white;
}

#chat_body {

    background-color: white;
    position: absolute;
    bottom: 41px;
    top: 50px;
    padding: 10px;
    overflow-y: auto;
    border: 1px solid #012C79;
    width: 80%;
    font-size: 14px;
}

#chat_message {

    position: absolute;
    bottom: 0px;
    padding: 10px;
    border: 1px solid #012C79;
    width: 80%;
 
    font-size: 14px;
  
}

#images_tablet {
    height: 90px;
}



#back_icon {
    position: absolute;
    height: 20px;
    cursor: pointer;
    left: 10px;
    padding-top: 75px;
}

.grid_element_border {
    float: left;
    position: relative;
    background-color: #012C79;
}
.grid_element {
    position: absolute;
    bottom: 1px;
    top: 1px;
    right: 1px;
    left: 1px;
}

.chat_name {
    font-weight: bold;
    float: left;
    padding-right: 3px;
}

.chat_italic {
    font-style: italic;
}




